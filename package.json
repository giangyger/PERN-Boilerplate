{
  "name": "pern-boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -rf ./node-modules package-lock.json && npm install",
    "build:check": "tsc -p .",
    "build:server": "rm -rf lib/* && tsc -p ./tsconfig.server.json",
    "build:webpack": "webpack bundle",
    "build": "npm run build:check && npm run build:server && npm run build:webpack",
    "start:server": "ts-node-dev src/server/server.ts",
    "start:webpack": "webpack serve",
    "start": "concurrently \"npm run start:server\" \"npm run start:webpack\""
  },
  "author": "Gian Gyger",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^14.14.19",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.15",
    "@types/react-router-dom": "^5.1.7",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "html-webpack-plugin": "^4.5.0",
    "ts-loader": "^8.0.13",
    "ts-node-dev": "^1.1.0",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1"
  }
}
